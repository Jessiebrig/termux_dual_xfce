conky.config = {
    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = false,
    own_window_argb_visual = true,
    own_window_argb_value = 220,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    alignment = 'top_right',
    gap_x = 10,
    gap_y = 40,
    minimum_width = 250,
    minimum_height = 200,
    update_interval = 2.0,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=11',
    background = true,
    double_buffer = true,
}
conky.text = [[
${font DejaVu Sans Mono:size=13:bold}${color grey}SYSTEM${font}
${color}${hr 1}
${color grey}Device:${color} ${exec getprop ro.product.brand 2>/dev/null || echo "Unknown"} ${exec getprop ro.product.model 2>/dev/null || echo "Unknown"}
${color grey}Uptime:${color} $uptime_short

${font DejaVu Sans Mono:size=13:bold}${color grey}CPU${font}
${color}${hr 1}
${color grey}Usage:${color} ${cpu cpu0}%
${cpubar 5}

${font DejaVu Sans Mono:size=13:bold}${color grey}MEMORY${font}
${color}${hr 1}
${color grey}RAM:${color} $mem / $memmax
${membar 5}

${font DejaVu Sans Mono:size=13:bold}${color grey}STORAGE${font}
${color}${hr 1}
${color grey}Root:${color} ${fs_used /} / ${fs_size /}
${fs_bar 5 /}
]]
